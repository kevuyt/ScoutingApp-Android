<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/save_to_stash"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="STASH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/auto_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTO:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <CheckBox
                android:id="@+id/auto_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Drop"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="61dp" />

            <CheckBox
                android:id="@+id/auto_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marker"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

            <CheckBox
                android:id="@+id/auto_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Parked"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="93dp" />

            <CheckBox
                android:id="@+id/auto_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="157dp" />

            <TextView
                android:id="@+id/tele_op_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEOP:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/depot_minerals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Depot Minerals"
                android:inputType="number"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="203dp" />

            <EditText
                android:id="@+id/lander_minerals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Lander Minerals"
                android:inputType="number"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="203dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>